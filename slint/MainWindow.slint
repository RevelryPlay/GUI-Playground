import { Button, HorizontalBox, VerticalBox } from "std-widgets.slint";

export component MainWindow inherits Window {
    property <int> counter1: 0;
    property <int> counter2: 0;

    width: 400px;
    height: 120px;
    default-font-size: 18px;
    title: "Hello, world";

    // Declare an alias that exposes the label's text property to C++
    in property my_label <=> label.text;

    verticalBox := VerticalBox {
        width: parent.width;
        height: parent.height;
        padding: 20px;
        spacing: 20px;

        horizontalBox := HorizontalBox {
            width: parent.width;
            height: 40px;
            spacing: 20px;
            padding: 0px;

            Button {
                text: "Button 1 - " + counter1;
                width: 170px;
                height: parent.height;
                primary: true;
                clicked => {
                    counter1 += 1;
                }
            }

            Button {
                text: "Button 2 - " + counter2;
                width: 170px;
                height: parent.height;
                clicked => {
                    counter2 += 1;
                }
            }
        }

        label := Text {
            text: "Hello, world";
        }
    }
}
